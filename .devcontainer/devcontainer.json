{
  "customizations": {
    "codespaces": {
      "extensions": [
        "github.vscode-codeql",
        "slevesque.vscode-zipexplorer",
        "burkeholland.simple-timer"
      ],
      "settings": {
        "codeQL.runningQueries.memory": 4096,
        "codeQL.runningQueries.autoSave": true,
        "CodeQL.canary.enabled": true
      },
      "openFiles": [
        "vscode-codeql-starter.code-workspace",
        "README.md"
      ]
    },
    "vscode": {
      "extensions": [
        "github.vscode-codeql",
        "slevesque.vscode-zipexplorer",
        "burkeholland.simple-timer"
      ],
      "settings": {
        "codeQL.runningQueries.memory": 4096,
        "CodeQL.canary.enabled": true
      },
      "openFiles": [
        "vscode-codeql-starter.code-workspace",
        "README.md"
      ]
    }
  },
  "postCreateCommand": "git submodule update --init --remote",
  "hostRequirements": {
    "memory": "16gb"
  }
 }
